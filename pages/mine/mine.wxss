/* pages/mine/mine.wxss */

.head {
  width:100%;
  height: 340rpx;
  background-color: #00a0e9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.headIcon {
  display: flex;
  justify-content: center;
}

.login {
  display: flex;
  color: #fff;
  font-size: 34rpx;
  margin-top: 20rpx;
  justify-content: center;
}

.button {
  width:50%;
  margin: 20rpx;
  font-size: 34rpx;
}

.head image {
  width:160rpx;
  height:160rpx;
  border-radius: 50%;
}

.hr {
  width: 100%;
  height: 30rpx;
  background-color: #f4f5f6;
}

.item {
  display: flex;
  flex-direction: row;
}

.title {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 40rpx;
  font-size: 34rpx;
}

.detail2 {
  font-size: 34rpx;
  position: absolute;
  right: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #888;
}

.line {
  border: 4rpx solid #ccc;
  opacity: 0.2;
}

