/* pages/mine/feedback/feedback.wxss */
@import "/utils/button.wxss";

page{
  width:100%;
  background-color: #efefef;
}

.center {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}
.title {
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #00a0e9;
  font-size: 34rpx;
}
.wrap {
  width:80%;
}
.contant_wrap{
    background-color: #fff;
    border-radius: 30rpx;
    border:1px solid #00a0e9;
}
.contant{
    width: 90%;
    margin: 0 auto;
   
}
.feedback{
    min-height: 300rpx;
    padding: 10rpx 0;
    width: 100%;
    font-size: 34rpx;
    
}
.contact{
    min-height: 100rpx;
    padding: 10rpx 0;
    width: 100%;
    font-size: 34rpx;
}

.placeholder{
    color: #999999;
    font-size: 34rpx;
}

